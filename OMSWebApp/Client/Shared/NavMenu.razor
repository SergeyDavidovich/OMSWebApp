<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">OMS Web</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass shadow" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard" Match="NavLinkMatch.All" @onclick="@(() => OnClick.InvokeAsync("DASHBOARD"))">
                <span class="oi oi-spreadsheet" aria-hidden="true"></span> Dashboard
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="orders" Match="NavLinkMatch.All" @onclick="@(() => OnClick.InvokeAsync("ORDERS"))">
                <span class="oi oi-cart" aria-hidden="true"></span> Orders
            </NavLink>
        </li>
        @*<li class="nav-item px-3">
                <NavLink class="nav-link" href="fetchdata" Match="NavLinkMatch.All">
                    <span class="oi oi-graph" aria-hidden="true"></span> Fetch data
                </NavLink>
            </li>*@
    </ul>
</div>

@code {

    [Parameter] public EventCallback<string> OnClick { get; set; }

    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
